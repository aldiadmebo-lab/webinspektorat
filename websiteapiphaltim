// Animasi Scroll
const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.classList.add('appear');
        }
    });
}, { threshold: 0.1 });

document.querySelectorAll('.animate-on-scroll').forEach(el => observer.observe(el));

// Menu Mobile
const menu = document.getElementById('mobile-menu');
const nav = document.getElementById('navLinks');
menu.addEventListener('click', () => {
    nav.classList.toggle('active');
});
:root {
    --navy: #1a3a5f;
    --gold: #f1c40f;
    --light: #f4f7f6;
}

* { margin: 0; padding: 0; box-sizing: border-box; }
body { font-family: 'Poppins', sans-serif; background: var(--light); color: #333; scroll-behavior: smooth; }

/* Navbar */
.navbar { display: flex; justify-content: space-between; align-items: center; background: var(--navy); padding: 1rem 8%; color: white; position: sticky; top: 0; z-index: 1000; }
.logo span { color: var(--gold); }
.nav-links { display: flex; list-style: none; }
.nav-links a { color: white; text-decoration: none; margin-left: 20px; font-size: 0.9rem; }

/* Hero */
.hero { height: 70vh; background: linear-gradient(rgba(26,58,95,0.8), rgba(26,58,95,0.8)), url(img/sampul.jpeg); background-size: cover; display: flex; align-items: center; justify-content: center; text-align: center; color: white; padding: 20px; }

/* Struktur Organisasi Simpel */
.org-chart { display: flex; flex-direction: column; align-items: center; gap: 30px; margin-top: 30px; }
.leader { background: var(--navy); color: white; padding: 20px; border-radius: 8px; border-bottom: 5px solid var(--gold); width: 250px; }
.sub-leader { display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; width: 100%; }
.box { background: white; padding: 15px; border: 1px solid #ddd; border-radius: 5px; font-weight: 600; color: var(--navy); }

/* Blog Cards */
.blog-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 25px; margin-top: 30px; }
.blog-card { background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.1); text-align: left; }
.blog-card img { width: 100%; height: 200px; object-fit: cover; }
.blog-content { padding: 20px; }
.blog-content .date { font-size: 0.8rem; color: #888; }

/* Animasi */
.animate-on-scroll { opacity: 0; transform: translateY(30px); transition: 0.8s all ease; }
.animate-on-scroll.appear { opacity: 1; transform: translateY(0); }

.divider { width: 50px; height: 4px; background: var(--gold); margin: 15px auto; }
section { padding: 60px 8%; text-align: center; }

@media (max-width: 768px) {
    .nav-links { display: none; }
    .hero h1 { font-size: 1.8rem; }
}
